RewriteEngine On

# ‚úÖ Allow direct access to static files (pdf, jpg, png, css, js, etc.)
RewriteCond %{REQUEST_URI} \.(pdf|jpg|jpeg|png|gif|css|js|ico|woff2?|ttf|eot|svg)$ [NC]
RewriteRule ^ - [L]

# üîÅ Route everything else to index.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.php?url=$1 [QSA,L]
